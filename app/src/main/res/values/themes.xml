<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Musicdeck" parent="Theme.Material3.Dark.NoActionBar">
        <!-- 2026 Unified Violet Accent -->
        <item name="colorPrimary">@color/colorViolet</item>
        <item name="colorPrimaryVariant">@color/colorVioletDark</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Pitch Black AMOLED Theme -->
        <item name="colorSurface">@color/pitchBlack</item>
        <item name="colorSurfaceVariant">@color/pitchBlackLight</item>
        <item name="android:colorBackground">@color/pitchBlack</item>
        <item name="colorSurfaceContainer">@color/pitchBlack</item>
        <item name="colorSurfaceContainerHigh">@color/pitchBlackLight</item>
        <item name="colorSurfaceContainerLow">@color/pitchBlack</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pitchBlack</item>
        <item name="android:navigationBarColor">@color/pitchBlack</item>
        <!-- Customize your theme here. -->
    </style>


    
    <style name="AlphabetLetter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:paddingHorizontal">3dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AlphabetLetterActive" parent="AlphabetLetter">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="RoundedCorner8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="RoundedCorner12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="TransparentBottomSheetDialog" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="TransparentBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearance">@style/ShapeAppearance.BottomSheet32</item>
    </style>
    
    <style name="ShapeAppearance.BottomSheet32" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Theme Variants -->
    <style name="Theme.Musicdeck.Violet" parent="Theme.Musicdeck">
        <item name="colorPrimary">@color/colorViolet</item>
        <item name="colorPrimaryVariant">@color/colorVioletDark</item>
    </style>
    
    <style name="Theme.Musicdeck.Ocean" parent="Theme.Musicdeck">
        <item name="colorPrimary">@color/colorOcean</item>
        <item name="colorPrimaryVariant">@color/colorOceanDark</item>
    </style>

    <style name="Theme.Musicdeck.Rose" parent="Theme.Musicdeck">
        <item name="colorPrimary">@color/colorRose</item>
        <item name="colorPrimaryVariant">@color/colorRoseDark</item>
    </style>

    <style name="Theme.Musicdeck.Neon" parent="Theme.Musicdeck">
        <item name="colorPrimary">@color/colorNeon</item>
        <item name="colorPrimaryVariant">@color/colorNeonDark</item>
    </style>
    
    <style name="Theme.Musicdeck.Amber" parent="Theme.Musicdeck">
        <item name="colorPrimary">@color/colorAmber</item>
        <item name="colorPrimaryVariant">@color/colorAmberDark</item>
    </style>
    
    <style name="Theme.Musicdeck.Sky" parent="Theme.Musicdeck">
        <item name="colorPrimary">@color/colorSky</item>
        <item name="colorPrimaryVariant">@color/colorSkyDark</item>
    </style>
    
    <!-- Cover/Lyric Toggle Button Base Style -->
    <style name="Widget.App.ToggleButton" parent="Widget.Material3.Button.TextButton">
        <!-- NO stroke on individual buttons - container has the stroke -->
        <item name="strokeWidth">0dp</item>
        
        <!-- Background: transparent when not selected, charcoal when selected -->
        <item name="backgroundTint">@color/toggle_button_bg</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/toggle_button_text</item>
        
        <!-- Remove all insets - CRITICAL to prevent text squashing -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        
        <!-- Min height -->
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>
        
        <!-- Horizontal padding only -->
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        
        <!-- No icon -->
        <item name="iconTint">@null</item>
        <item name="iconPadding">0dp</item>
    </style>
    
    <!-- Left button with pill shape on left side -->
    <style name="Widget.App.ToggleButton.Left" parent="Widget.App.ToggleButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Toggle.Left</item>
    </style>
    
    <!-- Right button with pill shape on right side -->
    <style name="Widget.App.ToggleButton.Right" parent="Widget.App.ToggleButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Toggle.Right</item>
    </style>
    
    <!-- Shape for left button (50% pill on left corners) -->
    <style name="ShapeAppearance.Toggle.Left" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Shape for right button (50% pill on right corners) -->
    <style name="ShapeAppearance.Toggle.Right" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>
</resources>
