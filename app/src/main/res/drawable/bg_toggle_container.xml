<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Subtle semi-transparent fill for depth -->
    <solid android:color="#1A808080" />
    
    <!-- Soft, subtle stroke - less harsh than before -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" />
    
    <!-- Full pill shape -->
    <corners android:radius="50dp" />
    
    <!-- Slight padding inside -->
    <padding
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp" />
    
</shape>
