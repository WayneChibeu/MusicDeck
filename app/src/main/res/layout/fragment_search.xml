<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">
    
    <!-- Top Bar with Back, Search Input, Search Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:background="?attr/colorSurface">
        
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/colorOnSurface"
            android:contentDescription="Back"/>
        
        <!-- Search Input Field -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="?attr/colorOnSurfaceVariant"/>
                
                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Search songs, artists..."
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:textColor="?attr/colorOnSurface"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textSize="14sp"/>

                <ImageButton
                    android:id="@+id/btnVoiceSearch"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_mic"
                    app:tint="?attr/colorPrimary"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Voice Search"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Search Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Search"
            android:textSize="13sp"
            app:cornerRadius="18dp"
            style="@style/Widget.Material3.Button"/>
    </LinearLayout>
    
    <!-- Search History Header -->
    <LinearLayout
        android:id="@+id/historyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search History"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"/>
        
        <ImageButton
            android:id="@+id/btnClearHistory"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            app:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="Clear History"/>
    </LinearLayout>
    
    <!-- Search History Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:chipSpacingHorizontal="8dp"
        app:chipSpacingVertical="4dp"/>
    
    <!-- No History Text -->
    <TextView
        android:id="@+id/tvNoHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="No search history"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:visibility="gone"/>
    
    <!-- Search Results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="16dp"/>

</LinearLayout>
