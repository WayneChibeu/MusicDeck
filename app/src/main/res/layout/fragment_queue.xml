<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:maxHeight="500dp"
    android:background="?attr/colorSurface">
    
    <!-- Drag Handle -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_sheet_drag_handle"
        app:backgroundTint="?attr/colorOnSurfaceVariant"
        android:alpha="0.4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Current Queue"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textStyle="bold"
            android:letterSpacing="0.01" />
            
        <TextView
            android:id="@+id/tvQueueCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 songs"
            android:layout_marginEnd="20dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />
            
        <ImageButton
            android:id="@+id/btnClearQueue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_playlist_clear"
            app:tint="?attr/colorError"
            android:contentDescription="Clear Queue" />
            
    </LinearLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQueue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

</LinearLayout>
